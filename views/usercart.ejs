                    .catch(error => console.error('Error updating quantity:', error));
            
            }
           
          
            updateTotalSum()
            const quantityButtons = document.querySelectorAll('.quantity-decrement, .quantity-increment');
    
            quantityButtons.forEach(button => {
                button.addEventListener('click', function () {
                    const input = this.parentElement.querySelector('.num-product');
                    const bookId = input.dataset.bookId;
                    const price = parseFloat(input.dataset.price);
                    const maxQuantity = parseInt(input.getAttribute('max'))
    
                    let currentValue = parseInt(input.value -1) || 0;
                    const direction = this.classList.contains('quantity-increment') ? 1 : -1;
                    const newValue = Math.min(Math.max(1, currentValue + direction), maxQuantity);
    
                    // Update UI
                    input.value = newValue;
                    updateTotalPrice(bookId, price, newValue);
    
                    // Update quantity in cart data
                    updateCartQuantity(bookId, newValue);
                    // Note: You can add your own logic here to update the cart data on the server
    
                    // Update total sum dynamically without Ajax
                    updateTotalSum();
                });
            });
    
            function updateTotalPrice(bookId, price, quantity) {
             

                const totalPriceElement = document.getElementById(`total-price-${bookId}`);
    
                if (totalPriceElement) {
                    const newTotalPrice = price * quantity;
                    totalPriceElement.textContent = `â‚¹ ${newTotalPrice.toFixed(2)}`;
                }
            }


            function updateCartQuantity(bookId, quantity) {
                
             

                fetch(`/updateQuantity/${bookId}/${quantity}`, {
                    method: 'PUT', 
                })
                    .then(response => response.json())
                    .then(data => {
                        console.log('Quantity updated successfully:', data);
                    })
                    .catch(error => console.error('Error updating quantity:', error));
            }
    
            function updateTotalSum() {
              

                // Calculate total sum without making an Ajax request
                const totalSumElement = document.getElementById('total-sum-result');
                const totalPriceElements = document.querySelectorAll('[id^="total-price-"]');
    
                let totalSum = 0;
    
                totalPriceElements.forEach(element => {
                    totalSum += parseFloat(element.textContent.replace('â‚¹', ''));
                });
    
                if (totalSumElement) {
                    totalSumElement.textContent = `â‚¹ ${totalSum.toFixed(2)}`;
                 
                } 
            }
        });
    </script>
    











